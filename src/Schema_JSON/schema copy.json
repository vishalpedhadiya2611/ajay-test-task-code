{
  "myForm": {
    "formLabel": "My Registration",
    "fields": [
      {
        "id": "task_name",
        "name": "task_name",
        "label": "Task Name",
        "type": "string",
        "screenElement": "TextBox",
        "isRequired": "Yes",
        "validationMessage": "Please enter task name."
      },
      {
        "id": "task_description",
        "name": "task_description",
        "label": "Task Description",
        "type": "string",
        "screenElement": "TextArea",
        "isRequired": "No",
        "validationMessage": "Please enter description."
      },
      {
        "id": "partner_connection",
        "name": "partner_connection",
        "label": "Partner Connection",
        "type": "number",
        "screenElement": "DropDown",
        "isRequired": "Yes",
        "validationMessage": "Please select connection."
        ,
        "option": [
          { "label": "Connection 1", "value": 1, "id": 1 },
          { "label": "Connection 2", "value": 2, "id": 2 },
          { "label": "Connection 3", "value": 3, "id": 3 }
        ]
      },
      {
        "id": "active_connection",
        "name": "active_connection",
        "label": "Active Connection",
        "type": "string",
        "screenElement": "CheckBox",
        "isRequired": "Yes",
        "validationMessage": "Please select at least one connection.",
        "option": [
          {
            "label": "Connection 1",
            "id": 1,
            "value": 1,
            "default_checked": "Yes"
          },
          {
            "label": "Connection 2",
            "id": 2,
            "value": 2,
            "default_checked": "No"
          },
          {
            "label": "Connection 3",
            "id": 3,
            "value": 3,
            "default_checked": "Yes"
          }
        ]
      },
      {
        "id": "connection_status",
        "name": "connection_status",
        "label": "Connection Status",
        "type": "boolean",
        "screenElement": "Radio",
        "option": [
          {
            "label": "Active",
            "id": 1,
            "value": "active",
            "default_checked": "No"
          },
          {
            "label": "Inactive",
            "id": 2,
            "value": "inactive",
            "default_checked": "Yes"
          }
        ]
      }
    ]
  }
